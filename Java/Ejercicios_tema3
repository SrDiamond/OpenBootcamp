public class Main {

    public static void main(String[] args) {
        //Primera parte.
        System.out.println("Total: " + suma(4,8,10)); //22

        //Segunda parte.
        Coche miCoche = new Coche();
        miCoche.agregarPuertas();
        System.out.println("Puertas: " + miCoche.puertas); //1
    }

    public static int suma(int a, int b, int c){
        int total;
        total = a + b + c;
        return total;
    }

}
class Coche{
    public int puertas = 0;

    public void agregarPuertas(){
        this.puertas++;
    }

}
